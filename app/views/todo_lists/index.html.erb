<div class="card-header d-flex justify-content-between">
  <span class="h4 m-0 text-dark">Todo Lists</span>
  <%= link_to 'New Todo List', new_todo_list_path, class: 'btn btn-primary btn-sm' %>
</div>

<div class="card-body">

<ul class="list-group">
  <% @todo_lists.each do |todo_list|%>
  <%= link_to todo_list, class: 'text-decoration-none' do%>
    <li class="card-header d-flex justify-content-between list-group-item">
      <div>
        <h5 class="m-0 text-dark">
          <%= todo_list.title %>
          <span class="badge bg-<%= todo_list.badge_color %>"><%= todo_list.status %></span>
        </h5>
        <p class="text-secondary m-0"><small><%= todo_list.percent_complete%>% Complete (<%=todo_list.completed_items%>/<%= todo_list.total_items%> items)</small></p>
      </div>
      <span><%= link_to 'Remove', todo_list, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"%></span>
    </li>
  <% end %>
<% end %>
</ul>


</div>

